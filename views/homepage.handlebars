{{#if logged_in}}
<div class="card-container position-absolute top-100 left-100 w-10 h-10">
<button class="button" data-open="myModal1">Create Post</button>
<div class="reveal" id="myModal1" data-reveal>
  <h1> Your New Post</h1>
  <form id="new-article-form">
    <input type="hidden" id="user_id" value="<%= user_id %>">
  <div class="grid-x grid-padding-x">
    <div class="small-9 cell">
      <input type="form-input" id="article-title" placeholder="Title" required>
    </div>
  </div>